<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:gravity="right|top"
        android:layout_height="190dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ac_round_button"
            android:onClick="onClickACButton"
            android:text="AC"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/operand_round_button"
            android:onClick="onClickOperatorButton"
            android:text="/"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonMult"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/operand_round_button"
            android:onClick="onClickOperatorButton"
            android:text="*"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonBSpace"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bs_round_button"
            android:onClick="onClickBSButton"
            android:text="BS"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_num7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onClickNumberButton"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_num8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onClickNumberButton"
            android:text="8"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_num9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onClickNumberButton"
            android:text="9"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonMod"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/operand_round_button"
            android:onClick="onClickOperatorButton"
            android:text="%"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_num4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onClickNumberButton"
            android:text="4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_num5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onClickNumberButton"
            android:text="5"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_num6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left|top"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onClickNumberButton"
            android:text="6"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/operand_round_button"
            android:onClick="onClickOperatorButton"
            android:text="-"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_num1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onClickNumberButton"
            android:text="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_num2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onClickNumberButton"
            android:text="2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_num3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onClickNumberButton"
            android:text="3"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/operand_round_button"
            android:onClick="onClickOperatorButton"
            android:text="+"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_num0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onClickNumberButton"
            android:text="0"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonFP"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onClickFPButton"
            android:text="."
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonParentheses"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:onClick="onclickParenthesesButton"
            android:text="()"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/operand_round_button"
            android:onClick="onClickequalButton"
            android:text="="
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
