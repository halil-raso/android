<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_columnSpan="4"
        android:layout_weight="1" />

    <Button
        android:id="@+id/buttonAC"
        android:layout_gravity="left|top"
        android:onClick="onClickACButton"
        android:text="AC" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_gravity="left|top"
        android:onClick="onClickOperatorButton"
        android:text="/" />

    <Button
        android:id="@+id/buttonMult"
        android:layout_gravity="left|top"
        android:onClick="onClickOperatorButton"
        android:text="*" />

    <Button
        android:id="@+id/buttonBSpace"
        android:layout_gravity="left|top"
        android:onClick="onClickBSButton"
        android:text="BS" />

    <Button
        android:id="@+id/button_num7"
        android:layout_gravity="left|top"
        android:onClick="onClickNumberButton"
        android:text="7" />

    <Button
        android:id="@+id/button_num8"
        android:layout_gravity="left|top"
        android:onClick="onClickNumberButton"
        android:text="8" />

    <Button
        android:id="@+id/button_num9"
        android:layout_gravity="left|top"
        android:onClick="onClickNumberButton"
        android:text="9" />

    <Button
        android:id="@+id/buttonMod"
        android:layout_gravity="left|top"
        android:text="%"
        android:onClick="onClickOperatorButton"/>

    <Button
        android:id="@+id/button_num4"
        android:layout_gravity="left|top"
        android:onClick="onClickNumberButton"
        android:text="4" />

    <Button
        android:id="@+id/button_num5"
        android:layout_gravity="left|top"
        android:onClick="onClickNumberButton"
        android:text="5" />

    <Button
        android:id="@+id/button_num6"
        android:layout_gravity="left|top"
        android:onClick="onClickNumberButton"
        android:text="6" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_gravity="left|top"
        android:onClick="onClickOperatorButton"
        android:text="-" />

    <Button
        android:id="@+id/button_num1"
        android:layout_gravity="left|top"
        android:onClick="onClickNumberButton"
        android:text="1" />

    <Button
        android:id="@+id/button_num2"
        android:layout_gravity="left|top"
        android:onClick="onClickNumberButton"
        android:text="2" />

    <Button
        android:id="@+id/button_num3"
        android:layout_gravity="left|top"
        android:onClick="onClickNumberButton"
        android:text="3" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_gravity="left|top"
        android:onClick="onClickOperatorButton"
        android:text="+" />

    <Button
        android:id="@+id/button_num0"
        android:layout_gravity="left|top"
        android:onClick="onClickNumberButton"
        android:text="0" />

    <Button
        android:id="@+id/buttonFP"
        android:layout_gravity="left|top"
        android:onClick="onClickFPButton"
        android:text="." />

    <Button
        android:id="@+id/buttonParentheses"
        android:layout_gravity="left|top"
        android:text="()"
        android:onClick="onclickParenthesesButton"/>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_gravity="left|top"
        android:text="="
        android:onClick="onClickequalButton"/>

</GridLayout>
